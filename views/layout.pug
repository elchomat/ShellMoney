doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no")
    // link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css')
    

  body
    div.container
      h1= title
      h3
        #selectedMonthYear
        button(type="button",class="btn btn-primary",id="monthUp")
          | ü¢Å
        button(type="button",class="btn btn-primary",id="monthDown")
          | ü¢É
      #accountsButton
        button(type="button",class="btn btn-primary",id="buttonShowAccounts")
          | Show Accounts
      block accounts
        #accountOverview(style="display:none")
          table.table-dark.my-2.flex.table-striped.table-bordered.mx-auto.p-auto(width="100%",cellspacing="0",cellpadding="0")
            thead
              tr.w-auto.pauto
                th Name
                th Current Balance
                th Balance including unbooked transactions
            tbody
      block navigation
        #navigation.my-4
          div(class="btn-group",role="group")
            button(type="button",class="btn btn-primary",id="DisplayDB")
              | Show DB
            button(type="button",class="btn btn-primary",id="DisplayAdd")
              | Add Transaction
            button(type="button",class="btn btn-primary",id="DisplayCategories")
              | Categories
      block content
        #databaseView(style="display:none")
          #TransactionInfo
            h2 Transaction Info
            p
              strong dateEntered:
              |  <span id='transactionInfoDateEntered'></span>
              br
              strong dateBooked:
              |  <span id='transactionInfoDateBooked'></span>
              br
              strong name:
              |  <span id='transactionInfoName'></span>
              br
              strong id:
              |  <span id='transactionInfoID'></span>
              br
              strong Account:
              |  <span id='transactionInfoAccount'></span>
              br
              strong Target Account:
              |  <span id='transactionInfoTargetAccount'></span>
              br
              strong bookingType:
              |  <span id='transactionInfoBookingType'></span>
              br
              strong totalAmount:
              |  <span id='transactionInfoTotalAmount'></span>
              br
              strong Categories:
              br
              |  <span id='transactionInfoCategories'></span>
              br
            // /USER INFO
            // TRANSACTION LIST
          #transactionList
            h2 Transaction List
            table.table.my-2.flex.table-striped.table-bordered.mx-auto.p-auto(width="100%",cellspacing="0",cellpadding="0")
              thead
                th Amount
                th Name
                th Booked?
                th Delete?
              tbody
          // /TRANSACTION LIST
          // ADD TRANSACTION
        #addTransactionView(style="display:none")
          h2.my-2
           | Add Transaction
          #addTransaction
            .dropdown
              button.btn.btn-secondary.dropdown-toggle.m-2.p-2(data-toggle="dropdown",type="button")
               | Booking Type
              .dropdown-menu
                a.dropdown-item.dropdown-item-paymentTypeSelection(href="#")
                 | Payment
                a.dropdown-item.dropdown-item-paymentTypeSelection(href="#")
                 | Income
                a.dropdown-item.dropdown-item-paymentTypeSelection(href="#")
                 | Transfer
                a.dropdown-item.dropdown-item-paymentTypeSelection(href="#")
                 | Correction
            #general(style="display:none")
              input(type="text",placeholder="Date",id="datepicker").m-2.p-2.datepicker
              input(type="text",placeholder="Account",id="inputAccount").m-2.p-2.inputAccount
            #payment(style="display:none")
              input(type="text",placeholder="Name",id="inputNamePayment").m-2.p-2.inputName
              div
              input(type="number",placeholder="Amount 1",id="inputAmount1",class="m-2 p-2").inputAmount
              
              .dropdown
                button.btn.btn-secondary.dropdown-toggle.m-2.p-2(data-toggle="dropdown",type="button",id="inputCategoryPayment1Button").category1Button
                 | Pick Category 1
                .dropdown-menu
              input(type="number",placeholder="Amount 2",id="inputAmount2").m-2.p-2.inputAmount
              .dropdown
                button.btn.btn-secondary.dropdown-toggle.m-2.p-2(data-toggle="dropdown",type="button",id="inputCategoryPayment2Button")
                 | Pick Category 2
                .dropdown-menu
              input(type="number",placeholder="Amount 3",id="inputAmount3").m-2.p-2.inputAmount
              .dropdown
                button.btn.btn-secondary.dropdown-toggle.m-2.p-2(data-toggle="dropdown",type="button",id="inputCategoryPayment3Button")
                 | Pick Category 3
                .dropdown-menu
              input(type="number",placeholder="Amount 4",id="inputAmount4").m-2.p-2.inputAmount
              .dropdown
                button.btn.btn-secondary.dropdown-toggle.m-2.p-2(data-toggle="dropdown",type="button",id="inputCategoryPayment4Button")
                 | Pick Category 4
                .dropdown-menu
              #summedAmounts.m-2.p-2
              button(type="test",class="btn btn-success m-2 p-2 insertTransactionButtonToggleBooked")
               | Booked
            #income(style="display:none")
              input(type="text",placeholder="Name",id="inputNameIncome").m-2.p-2.inputName
              input(type="number",placeholder="Amount 1",id="inputAmount1",class="m-2 p-2").inputAmount
              .dropdown
                button.btn.btn-secondary.dropdown-toggle.m-2.p-2(data-toggle="dropdown",type="button",id="inputCategoryIncomeButton").category1Button
                 | Pick Category (optional)
                .dropdown-menu
              button(type="test",class="btn btn-success m-2 p-2 insertTransactionButtonToggleBooked")
               | Booked
            #transfer(style="display:none")
              input(type="text",placeholder="To Account",id="targetAccount").m-2.p-2.targetAccount
              input(type="number",placeholder="Amount",id="inputAmount1",class="m-2 p-2").inputAmount
              button(type="test",class="btn btn-success m-2 p-2 insertTransactionButtonToggleBooked")
               | Booked
            #correction(style="display:none")
              input(type="number",placeholder="Target Amount",id="inputAmount1",class="m-2 p-2").inputAmount
              .dropdown
                button.btn.btn-secondary.dropdown-toggle.m-2.p-2(data-toggle="dropdown",type="button",id="inputCategoryCorrectionButton").category1Button
                 | Pick Category (optional)
                .dropdown-menu
          button(type="button",class="btn btn-dark m-2 p-2",id="addTransactionButton")
           | Add Transaction
        #categoriesView.my-4(style="display:none")
          #categoryDatabaseView
            table.table.my-2.flex.table-bordered.mx-auto.p-auto(width="100%",cellspacing="0",cellpadding="0")
              thead
                th Name
                th Saved
                th Allocated
                th Changes this month
                th Total
                th Modify?
                th Delete?
              tbody
          #categoryUnallocatedMoney.m-2
          #categoryToBeAllocatedMoney.m-2
          #modifyDatabaseEntryCategory.my-4(style="display:none")
            #modifyCategoryID(style="display:none")
            h4 Change Category
            p 
              | Name: 
              input(type="text",id="changeCategoryName").m-2   
              button(type="button",class="btn btn-dark",id="changeCategoryButton").m-2
                | Save Changes
              button(type="button",class="btn btn-dark",id="cancelChangeCategoryButton").m-2
                | Cancel
          button(type="button",class="btn btn-dark",id="addCategoryButton").m-2
            | Add Category      
          #addCategory.my-4(style="display:none")
            h4 Add Category
            p
              input(type="text",placeholder="Category Name",id="inputCategoryName").mx-2
            p
              button(type="button",class="btn btn-dark",id="addCategoryButtonAdd").mx-2
               | Add
              button(type="button",class="btn btn-dark",id="addCategoryButtonCancel").mx-2
               | Cancel
          #categoriesInfo.my-4(style="display:none")
            h4 Category Info
            p
              #categoryInfoName
              #categoryInfoReferenceDate(style="display:none")
              #categoryInfoReferenceAmount(style="display:none")
              #categoryInfoAllocatedSinceReference(style="display:none")
              strong
               | Transactions this month:
              #categoryInfoTransactions
                table.table.my-2.flex.table-bordered.mx-auto.p-auto
                  thead
                    th Name
                    th Date
                    th Booked
                    th Account
                    th Amount
                  tbody


    script(src='https://code.jquery.com/jquery-3.3.1.min.js') 
    // Dont use the slim version here, this will cause calls to fail.
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
    script(src='https://code.jquery.com/ui/1.12.0/jquery-ui.min.js')
    script(src='javascripts/global.js')
  
